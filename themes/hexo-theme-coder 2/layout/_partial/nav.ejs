<div class="hd">
    <form id="site-search" class="site-search" action="https://www.google.com/search" method="get" target="_blank">
        <input type="text" name="q" class="site-search-input" placeholder="搜索本站（按回车）" aria-label="搜索本站">
        <button type="submit" class="site-search-btn">搜索</button>
    </form>
    <ol class="breadcrumb">
        <% for (name in theme.menu) { %>
            <li><a class="ba" href="<%- url_for(theme.menu[name]) %>"><%= name %></a></li>
        <% } %>
    </ol>
    <hr class="breadcrumbhr">
</div>